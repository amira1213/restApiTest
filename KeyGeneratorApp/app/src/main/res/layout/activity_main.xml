<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovog50.keygeneratorapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to my key generator app!"
        android:textSize="20dp"
        android:id="@+id/textView" />

    <Button
        android:text="Show Keys"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="68dp"
        style="Widget.AppCompat.Button.Colored"
        android:background="@drawable/buttonstyle"
        android:textColor="#FFFFFF"
        android:id="@+id/showKeys"
        android:textSize="40px"
        android:layout_below="@+id/addKey"
        android:layout_centerHorizontal="true"
        android:onClick="showKeys" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="39dp"
        android:id="@+id/addKey"
        android:textSize="40px"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/showKeys"
        android:onClick="addKey"
        android:text="Add a key" />


</RelativeLayout>
